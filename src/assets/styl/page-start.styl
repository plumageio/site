
//
// All the sections
//
.section
    padding-top: $line-height-computed
    padding-bottom: $line-height-computed

    @media $screen-sm
        padding-top: ($line-height-computed * 2)
        padding-bottom: ($line-height-computed * 2)


//
// Hero
//
.hero
    background: transparent url('../img/IMG_2869.JPG') center bottom
    background-size: cover
    color: #fff !important
    height: 100vh
    position: relative

    // image overlay
    &:before
        content: ""
        width: 100%
        height: 100%
        display: block
        position: absolute
        left: 0
        top: 0
        background: rgba(#6ef8ba, 20%)
        z-index: 4

.hero-title,
.hero-tagline
    position: relative
    z-index: 5

.hero-title
    margin-top: 0
    padding-top: 35vh




//
// Newsletter
//
.newsletter
    background-color: $brand-green
    @extend .text-center

    .newsletter-title,
    .newsletter-text,
    .newsletter-label,
    .btn
        color: #fff
        margin-top: 0

    .btn
        border-color: #fff

        &:hover
            background-color: #fff
            color: $brand-green

.newsletter-title,
.newsletter-label
    @extend .visuallyhidden


//
// About
//
.about
    @extend .text-center


//
// Footer
//
.footer
    .row
        border-top: 2px solid lighten($brand-grey, 50%)
        padding-top: $line-height-computed