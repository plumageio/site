
//
// All the sections
//
.section
    padding-top: $line-height-computed
    padding-bottom: $line-height-computed

    @media $screen-sm
        padding-top: ($line-height-computed * 2)
        padding-bottom: ($line-height-computed * 2)


//
// Hero
//
.hero
    background-image: url('../img/IMG_8807.JPG')
    background-size: cover
    color: #fff !important
    height: 500px

.hero-title
    margin-top: 0
    padding-top: $line-height-computed

//.hero-tagline


//
// Newsletter
//
.newsletter
    background-color: $brand-green
    @extend .text-center

    h1, p
        color: darken($brand-green, 70%)
        margin-top: 0


//
// About
//
.about
    @extend .text-center


//
// Footer
//
.footer
    .row
        border-top: 2px solid lighten($brand-grey-light, 50%)
        padding-top: $line-height-computed