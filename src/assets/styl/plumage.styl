//
// plumage landing page
// --------------
// The base file
//

// Normalize all the things
@import '../../../bower_components/normalize-css/normalize.css'
@import '../../../bower_components/normalize-opentype.css/normalize-opentype.css'

// Nib Nib
@import 'nib'

//
// Base
//
$brand-main             = #9d58e2
$brand-grey             = #444
$brand-grey-light       = #8c919b

$font-size-base         ?= 16px
$font-size-large        ?= ceil(($font-size-base * 1.25))
$font-size-small        ?= ceil(($font-size-base * 0.85))

$font-size-h1           ?= floor(($font-size-base * 2.6))
$font-size-h2           ?= floor(($font-size-base * 2.15))
$font-size-h3           ?= ceil(($font-size-base * 1.7))
$font-size-h4           ?= ceil(($font-size-base * 1.25))
$font-size-h5           ?= $font-size-base
$font-size-h6           ?= ceil(($font-size-base * 0.85))

$line-height-base       ?= 1.428571429
$line-height-computed   ?= floor(($font-size-base * $line-height-base))

$padding-base-vertical   ?= 12px
$padding-base-horizontal ?= 32px


body
    font-size: $font-size-base
    font-family: 'Lato', Arial, Verdana, 'Helvetica Neue', Helvetica, sans-serif
    font-weight: 300
    line-height: $line-height-base
    color: $brand-grey

h1, h2, h3, h4, h5,
.h1, .h2, .h3, .h4, .h5
    font-family: 'Advent Pro', Arial, Verdana, 'Helvetica Neue', Helvetica, sans-serif
    font-weight: 400
    margin-top: 0
    letter-spacing: 0.05em

h1, .h1
    font-size: $font-size-h1

h2, .h2
    font-size: $font-size-h2

h3, .h3
    font-size: $font-size-h3

h4, .h4
    font-size: $font-size-h4

h5, .h5
    font-size: $font-size-h5


//
// Buttons
//
.btn
    display: inline-block
    margin-bottom: 0
    text-align: center
    vertical-align: middle
    touch-action: manipulation
    cursor: pointer
    background-image: none
    border: 1px solid transparent
    white-space: nowrap
    user-select: none
    text-decoration: none

    // styling
    padding: $padding-base-vertical $padding-base-horizontal
    font-size: $font-size-base
    line-height: $line-height-base
    border-radius: 0
    color: $brand-grey-light
    border: 2px solid $brand-grey-light
    font-family: 'Advent Pro', Arial, Verdana, 'Helvetica Neue', Helvetica, sans-serif
    font-weight: 400
    letter-spacing: 0.05em
    text-transform: uppercase
    transition: all .2s ease-in-out

    &:hover,
    &:focus
        background-color: $brand-grey-light
        color: #fff


//
// Layout
//
.container
    clear: both

.row
    max-width: 640px
    margin: 0 auto
    padding: 5% 10%


//
// Hero
//
.hero
    background-image: url('http://placekitten.com/1000/300')
    background-size: cover
    color: #fff !important
    height: 400px

.hero-title
    padding-top: $line-height-computed

//.hero-tagline


//
// Newsletter
//
.newsletter
    background-color: $brand-main